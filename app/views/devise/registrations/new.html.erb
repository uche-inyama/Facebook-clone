<%# <h2>Sign up</h2> %>

<div class = "container ">
  <div class = "row">
    <div class = "col bg-light col-6 mx-auto py-4">
      <%= form_for(resource, as: resource_name, class: "", url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
  
        <div class="field">
          <%= f.label :first_name, class: "label  py-2"%><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "form-control mb-3"%>
        </div>

        <div class="field">
          <%= f.label :surname, class: "label py-2"%><br />
          <%= f.text_field :surname, autofocus: true, autocomplete: "surname", class: "form-control  mb-3"%>
        </div>
    
        <div class="field">
          <%= f.label :email, class: "label py-2"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3"%>
        </div>

        <div class="field">
          <%= f.label :password, class: "label py-2"%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-3"%>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label py-2"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3"%>
        </div>

        <div class="field">
          <%= f.label :date_of_birth, class: "label py-2" %><br />
          <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "date of birth", class: "form-control mb-3"%>
        </div>

        <div class="field mb-3">
          <%= f.label :gender, class: "label py-2" %><br />
          <%= f.radio_button :gender, 'Female' %>  <%= f.label :Male %>
          <%= f.radio_button :gender, 'Male' %>  <%= f.label :female %>
          <%= f.radio_button :gender, 'Custom' %> <%= f.label :Custom %> 
        </div>

        <div class="actions py-2 ">
          <%= f.submit "Sign up", class: "submit btn btn-primary" %>
        </div>
        <%# <%= render "devise/shared/links" %> 
      <% end %> 
    </div>
  </div>
</div>


